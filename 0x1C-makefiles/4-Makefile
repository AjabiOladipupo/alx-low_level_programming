# Makefile
CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(NAME)
clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f $(OBJ)
fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)
$(NAME): $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
re:
	$(RM) -f $(OBJ)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)
